
@{
    ViewData["Title"] = "GetAllTicket";
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";
}

<h1>GetAllTicket</h1>

@section Images
{
    <div  style="background-image:url('@ViewBag.crr.Image') ; margin:auto; width:100px ; height:100px ; border-radius:50%;background-size:cover; background-position:center; background-repeat:no-repeat ;"></div>
}
@section Namess
{
    <h5>@ViewBag.crr.Name</h5>
}

<table class="table table-striped table-dark container">
    <thead>
        <tr>
            <th>
                ..

            </th>
            <th>
                From
            </th>
            <th>
                To
            </th>
            <th>
                Price
            </th>
            <th>
                Flight
            </th>
            <th>
                Flight Arrive
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @ViewBag.Flight)
        {
            <tr>
                <td>
                   @item.ID
                </td>
                <td>
                    @item.TravelTimeFrom
                </td>
                <td>
                    @item.TravelTimeTo
                </td>
                <td>
                    @item.Price
                </td>
                <td>
                    @item.flight.Name
                </td>
                <td>
                    @item.flight.ArriveTime
                </td>

                <td>
                    <a asp-action="Delete" asp-controller="Admin" class="btn btn-danger" asp-route-id="@item.ID">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>

