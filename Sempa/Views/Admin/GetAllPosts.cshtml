@model Postscs;

@{
    ViewData["Title"] = "GetAllPosts";
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";
     var use = ViewBag.Curr;
}

@section Images
{
    <div  style="background-image:url('@ViewBag.Curr.Image') ; margin:auto; width:100px ; height:100px ; border-radius:50%;background-size:cover; background-position:center; background-repeat:no-repeat ;"></div>
}
@section Namess
{
    <h5>@use.Name</h5>
}

 @foreach (var post in ViewBag.Post)
{
                   
    
       
    
         <div class="container mt-5 mb-5">
            <div class="row d-flex align-items-center justify-content-center">
                <div class="col-md-9">
                    <div class="card">
                        <div class="d-flex justify-content-between p-2 px-3">
                            <div class="d-flex flex-row align-items-center"><div  style="background-image:url('@post.user.Image') ; width:50px ; height:50px ; border-radius:50%;background-size:cover; background-position:center; background-repeat:no-repeat ;margin-right:10px"></div> 
                                <div class="d-flex flex-column ml-2"> <span class="font-weight-bold">@post.user.Name</span> <small class="text-primary">@post.user.Adress</small> </div>
                            </div>
                            <div class="d-flex flex-row mt-1 ellipsis"> <small class="mr-2">@post.CreatedTime</small>  </div>
                        </div>
                        <div  style="background-image:url('@post.Image') ; width:100%; height: 430px ;background-size:cover; background-position:center; background-repeat:no-repeat ;"></div> 
                       @* <img src="@post.Image" style="width:100%; height: 300px" class="img-fluid">*@
                        <div class="p-2">
                            <p class="text-justify">@post.Body</p>
                            <hr>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="d-flex flex-row icons d-flex align-items-center"> <a id="myButton" singleclick="doSomething()" href="/Users/Like/@post.ID"  class="ml-2 btn btn-outline-dark " ><i class="fa fa-heart" ></i></a>  </div>
                                <div class="d-flex flex-row muted-color"> <span  style="margin:10px">@post.PostLike Like</span> <a  style="margin:10px" href="/Admin/Comments/@post.ID" class="ml-2 btn btn-outline-dark">Comment</a><a href="/Admin/Delete/@post.ID"  style="margin:10px" onClick="alert('Delete Post')" class="btn btn-outline-danger" >Delete</a>  </div>
                            </div>
                            <hr>
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
}