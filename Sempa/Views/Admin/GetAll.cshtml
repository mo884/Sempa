
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";
}

@section Images
{
    <div  style="background-image:url('@ViewBag.Curr.Image') ; margin:auto; width:100px ; height:100px ; border-radius:50%;background-size:cover; background-position:center; background-repeat:no-repeat ;"></div>
}
@section Namess
{
    <h5>@ViewBag.Curr.Name</h5>
}
 <form asp-action="Search" asp-controller="Admin" method="get" class="form-inline container cl-6 md-form mr-auto mb-4">
                <input class="form-control cl-4 mr-sm-2" type="text" placeholder="Search" name="Text" aria-label="Search">
                <button class="btn btn-success" type="submit">Search</button>
 </form>
<table class="table table-striped table-dark container">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Password
            </th>
            <th>
                Email
            </th>
            <th>
                Adress
            </th>
            <th>
                gender
            </th>
            <th>
                School
            </th>
            <th>
                Image
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @ViewBag.Show)
        {
            @if (item.Name == "Admin")
            {

            }else
            {
                 <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Password
                </td>
                <td>
                    @item.Email
                </td>
                <td>
                    @item.Adress
                </td>
                <td>
                    @item.gender
                </td>
                <td>
                    @item.School
                </td>
                <td>
                     <div  style="background-image:url('@item.Image') ; margin:auto; width:50px ; height:50px ; border-radius:50%;background-size:cover; background-position:center; background-repeat:no-repeat ;"></div>
                </td>
                <td>
                   
                    <a asp-action="Delete" asp-controller="Admin" class="btn btn-danger" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
            }
           
        }
    </tbody>
   


</table>
 <a asp-action="CreateUSer" class="btn btn-success container col-4">Create New</a>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
