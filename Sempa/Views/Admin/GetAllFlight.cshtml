
@{
    ViewData["Title"] = "GetAllFlight";
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";
}

@section Images
{
    <div  style="background-image:url('@ViewBag.crr.Image') ; margin:auto; width:100px ; height:100px ; border-radius:50%;background-size:cover; background-position:center; background-repeat:no-repeat ;"></div>
}
@section Namess
{
    <h5>@ViewBag.crr.Name</h5>
}

<table class="table table-dark container">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Arrive
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.Flight)
        {
           
                 <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.ArriveTime
                </td>
               

                <td>
                   
                    <a asp-action="Delete" asp-controller="Admin" class="btn btn-danger" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
           
           
        }
    </tbody>
   


</table>
 <a asp-action="CreateFlight" class="btn btn-success container col-4">Create New</a>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

