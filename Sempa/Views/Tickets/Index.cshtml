
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MyLayout2.cshtml";
      var use =   ViewBag.Curr;
}

<h2></h2>

@{
    int x = 1;
   
}



@section Images
{
    <div  style="background-image:url('@use.Image') ; margin:auto; width:100px ; height:100px ; border-radius:50%;background-size:cover; background-position:center; background-repeat:no-repeat ;"></div>
}
@section Namess
{
    <h5>@use.Name</h5>
}



<table class="table table-striped table-dark container">
    <thead>
        <tr>
            <th>
                ..

            </th>
            <th>
                From
            </th>
            <th>
                To
            </th>
            <th>
                Price
            </th>
            <th>
                Flight
            </th>
            <th>
                Flight Arrive
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @ViewBag.Ticket)
        {
            <tr>
                <td>
                    @x
                    @{
                        x++;
                    }
                </td>
                <td>
                    @item.TravelTimeFrom
                </td>
                <td>
                    @item.TravelTimeTo
                </td>
                <td>
                    @item.Price
                </td>
                <td>
                    @item.flight.Name
                </td>
                <td>
                    @item.flight.ArriveTime
                </td>

                <td>
                    <a asp-action="Record" asp-route-id="@item.ID">Book</a> 
                   
                </td>
            </tr>
        }
    </tbody>
</table>

