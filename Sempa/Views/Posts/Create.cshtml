@model Postscs
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_MyLayout2.cshtml";
}



@section Images
{
    <div  style="background-image:url('@ViewBag.Curr.Image') ; margin:auto; width:100px ; height:100px ; border-radius:50%;background-size:cover; background-position:center; background-repeat:no-repeat ;"></div>
}
@section Namess
{
    <h5>@ViewBag.Curr.Name</h5>
}
<div class="container" style="width:300px; margin : auto">
<form asp-action="Create" asp-controller="Posts" method="post" enctype="multipart/form-data" class="form-horizontal">

    <div class="row mt-3"> 
        <div class="col-md-12">
            <label class="labels">Title</label>
            <input type="text" class="form-control" placeholder="Title" name="Title" >
        </div> 

    </div> 
     <div class="row mt-3">
        <div class="col-md-12">
                <label class="labels">Body</label>
                <textarea  class="form-control" placeholder="enter Body" name="Body" ></textarea>
            </div> 
            <div class="col-md-12">
            <label class="labels">Image</label>
            <input type="file" class="form-control"  name="Image" >
        </div> 
        <div class="col-md-12">
          
            <input type="submit"  class="btn btn-primary" value="Create">
        </div>
   </div>
   
</form>
</div>